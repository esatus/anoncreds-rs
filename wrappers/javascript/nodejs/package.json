{
  "name": "anoncreds-nodejs",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "description": "Nodejs wrapper for Anoncreds",
  "main": "build/index",
  "source": "src/index",
  "homepage": "https://github.com/hyperledger/anoncreds/tree/main/wrappers/javascript/nodejs",
  "author": "Hyperledger (https://github.com/hyperledger)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/anoncreds",
    "directory": "wrappers/javascript/nodejs"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build",
    "scripts",
    "README.md",
    "package.json",
    "../../../LICENSE"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf ./build",
    "compile": "tsc -p tsconfig.build.json"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.10",
    "anoncreds-shared": "*",
    "ffi-napi": "4.0.3",
    "node-cache": "5.1.2",
    "ref-array-di": "1.2.2",
    "ref-napi": "3.0.3",
    "ref-struct-di": "1.1.1"
  },
  "devDependencies": {
    "@types/ffi-napi": "4.0.5",
    "@types/node": "17.0.31",
    "@types/ref-array-di": "1.2.3",
    "@types/ref-napi": "3.0.4",
    "@types/ref-struct-di": "1.1.6",
    "typescript": "4.5.5"
  },
  "binary": {
    "module_name": "anoncreds",
    "module_path": "native",
    "remote_path": "v{version}",
    "host": "https://github.com/hyperledger/anoncreds/release/download/",
    "package_name": "library-{platform}-{arch}.tar.gz"
  }
}
